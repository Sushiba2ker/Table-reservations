@model IEnumerable<TableReservations.Models.Category>

@{
    Layout = "_AdminLayout";
}

<div>
    <a asp-action="Add" class="btn btn-primary">Add New Category</a>
    <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back to menu</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>