@using Microsoft.AspNetCore.Identity
@model IEnumerable<TableReservations.Models.TableLocation>

@{
    ViewData["Title"] = "Table Locations";
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a asp-action="Add" class="btn btn-primary">Add New Table Location</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to menu</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content("~/images/" + item.ImageUrl)" alt="Table Image" style="max-width: 200px;" />
                    }
                </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>