@page "/register/"
@model RegisterModel
<link href="/css/sb-admin-2.css" rel="stylesheet" />
<link href="/css/sb-admin-2.min.css" rel="stylesheet" />

@{
    Layout = "/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "ĐĂNG KÝ";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
    </div>
    <form class="user" id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.FullName" class="form-control form-control-user" placeholder="Tên của bạn" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control form-control-user"
                   aria-describedby="emailHelp" placeholder="Nhập email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Nhập mật khẩu" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" placeholder="Nhập lại mật khẩu" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-user btn-block">Đăng ký</button>
        <hr>

        <div class="text-center">
            <a href="#" class="btn btn-google btn-user btn-block">
                <i class="fab fa-google fa-fw"></i>
                Đăng ký bằng Google
            </a>
            <a href="#" class="btn btn-facebook btn-user btn-block">
                <i class="fab fa-facebook-f fa-fw"></i>
                Đăng ký bằng Facebook
            </a>
        </div>
    </form>
    <div class="text-center">
        <a class="small" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đã có tài khoản? Đăng nhập</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
