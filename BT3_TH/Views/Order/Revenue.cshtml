@model BT3_TH.Models.Revenue

@{
    ViewData["Title"] = "Revenue";
    Layout = "_AdminLayout";

    void RenderRevenueTable(List<BT3_TH.Models.RevenueData> revenueData)
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Period</th>
                <th>Revenue</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in revenueData)
            {
                <tr>
                    <td>@item.Period</td>
                    <td>@item.Revenue.ToString("C")</td>
                </tr>
            }
            </tbody>
        </table>
    }
}

<div class="container">
    <h2 class="mt-5">Revenue</h2>

    <h3 class="mt-4">Weekly Revenue</h3>
    @{
        RenderRevenueTable(Model.WeeklyRevenue);
    }

    <h3 class="mt-4">Monthly Revenue</h3>
    @{
        RenderRevenueTable(Model.MonthlyRevenue);
    }

    <h3 class="mt-4">Yearly Revenue</h3>
    @{
        RenderRevenueTable(Model.YearlyRevenue);
    }

    <h3 class="mt-4">Total Revenue</h3>
    <p class="lead">@Model.TotalRevenue.ToString("C")</p>
</div>